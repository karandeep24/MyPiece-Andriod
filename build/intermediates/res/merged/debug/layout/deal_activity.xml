<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_deal_info_main_tag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:tag="normal-xxhdpi" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Deal Info"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textViewFinePrint"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/Act_Deal_Desc_DealDescription"
                        android:textColor="@color/deal_info_all_title_color_new"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginRight="110dp"
                        android:orientation="horizontal"
                        android:background="@color/deal_info_all_title_color_new">

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rel_fine_print_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textview_fineprint"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Get Any Deal !"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textView4_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/Act_Deal_Desc_TimeRemaining"
                        android:textColor="@color/deal_info_all_title_color_new"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginRight="110dp"
                        android:orientation="horizontal"
                        android:background="@color/deal_info_all_title_color_new">

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rel_time_remains_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" >

                        <TextView
                            android:id="@+id/textView1_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="00"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textViewValid"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/Act_Deal_Desc_Where"
                        android:textColor="@color/deal_info_all_title_color_new"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:layout_marginLeft="150dp"
                        android:layout_marginRight="150dp"
                        android:orientation="horizontal"
                        android:background="@color/deal_info_all_title_color_new">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rel_address_value"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textview_address"
                            android:layout_width="312dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="3700 Rue Saint-Patrick,Suite 200"
                            android:textColor="@color/black"
                            android:textSize="17sp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/textview_City"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="City"
                                android:textColor="@color/black"
                                android:layout_marginRight="15dp"
                                android:textSize="17sp"/>

                            <TextView
                                android:id="@+id/textview_Postal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="ZIP"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/black"
                                android:textSize="17sp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_footer_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_map_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <fragment
                android:id="@+id/map_image_imageviews"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl_footer1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFF"
            android:weightSum="1"
            android:orientation="vertical">

            <Button
                android:background="#32b253"
                android:text="@string/Act_Deal_Desc_Purchase"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnpurchase">

            </Button>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>