<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_primary">


    <LinearLayout
        android:id="@+id/canRedeem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txt_RestroName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Boustan"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="23dp"
                />

            <TextView
                android:id="@+id/txt_Address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="address"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_timer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:text="00:00:00"
            android:textColor="#f43446"
            android:textSize="25dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/main_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_mainQty"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    />

                <TextView
                    android:id="@+id/txt_main"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=" Sandwich"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addOnOne_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_addOnOneQty"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    />

                <TextView
                    android:id="@+id/txt_addOnOne"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=" Add On One"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addOnTwo_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_addOnTwoQty"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    />

                <TextView
                    android:id="@+id/txt_addOnTwo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=" Add On Two"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/addOnThree_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_addOnThreeQty"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    />

                <TextView
                    android:id="@+id/txt_addOnThree"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=" Add On Three"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/total_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_Total"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Total : "
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/txt_amount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="40"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/isRedeemable"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:gravity="center">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/RedeemDealMsg1"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/RedeemDealMsg2"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/days"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Days"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true"
                    >

                    <TextView
                        android:id="@+id/startTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Time"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_alignParentLeft="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/and"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Time"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="16dp"
                        />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/expiredLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:gravity="center">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/ExpiredDealMsg1"
                android:textColor="#f43446"
                android:textSize="18dp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:text="@string/ExpiredDealMsg2"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/txt_purchasedDateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Act_MyPurchase_Footer1"
                android:gravity="center"
                android:textStyle="italic"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/txt_purchasedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09-01-2016"
                android:textStyle="italic"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/redeemLay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#32b253"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnRedeem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/textRedeem"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:text="@string/Act_MyPurchase_Redeem"
                    android:textSize="20dp"
                    android:textStyle="bold|italic"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dismissLay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#666666"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnDismiss"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:text="@string/Act_MyPurchase_Dismiss"
                    android:textSize="20dp"
                    android:textStyle="bold|italic"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
